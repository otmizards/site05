---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE } from "../config/site.js";

const title = `Política de Privacidade — ${SITE.name ?? SITE.siteName}`;
const description = "Como tratamos dados e cookies neste site.";
---

<BaseLayout title={title} description={description} canonicalPath="/privacidade">
  <main class="container" style="padding: 32px 0;">
    <h1>Política de Privacidade</h1>
    <p>
      Este site pode usar métricas básicas (ex.: logs de servidor) para funcionamento e segurança.
      Não recolhemos dados sensíveis intencionalmente.
    </p>
    <p>
      Links externos (ex.: Telegram) seguem as políticas das respetivas plataformas.
    </p>
  </main>
</BaseLayout>
